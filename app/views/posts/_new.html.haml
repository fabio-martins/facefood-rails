#container{ data:{controller: 'post'} }
    .card
        = form_for(Post.new, url: post_index_path) do |f|
            .container-new-post
                %label{ class:'btn-add-post' }
                    %img{src: 'assets/images/buttons/button_new_post_image.png'}
                    %span= t(:'activerecord.attributes.post.photo')
                    = f.file_field :image, data:{ action: 'post#previewImage' }
                %img{'data-post-target': 'preview'}
                .line-new-post
                = f.text_field :content, class: 'input-new-post', placeholder: t(:'activerecord.attributes.post.new_post')
                = f.submit t(:'activerecord.attributes.post.publish'), class: 'btn-submit'
                %in
